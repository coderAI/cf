<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mb_reason_invoice_line_form" model="ir.ui.view">
            <field name="name">view.mb.reason.invoice.line.form</field>
            <field name="model">mb.reason.invoice.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reason Invoice Line">
                    <sheet>
                            <group>
                            <field name="mb_reason_invoice_id"/>
                            <field name="note"/>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="action_view_mb_reason_invoice_line" model="ir.actions.act_window">
            <field name="name">Reason Invoice Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mb.reason.invoice.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>

